package it.prova.cartellaesattorialespringjpa.model.dto;

import java.util.ArrayList;
import java.util.List;

import org.apache.commons.lang.StringUtils;

public class CartellaEsattorialeDTO {
	private String id;
	private String denominazione;
	private String importo;
	private String idContribuente;
	
	public CartellaEsattorialeDTO() {
		// TODO Auto-generated constructor stub
	}
	
	public CartellaEsattorialeDTO(String denominazione, String importo) {
		super();
		this.denominazione = denominazione;
		this.importo = importo;
	}
	public CartellaEsattorialeDTO(String id, String denominazione, String importo, String idContribuente) {
		super();
		this.id = id;
		this.denominazione = denominazione;
		this.importo = importo;
		this.idContribuente = idContribuente;
	}
	public CartellaEsattorialeDTO(String denominazione, String importo, String idContribuente) {
		super();
		this.denominazione = denominazione;
		this.importo = importo;
		this.idContribuente = idContribuente;
	}
	public String getId() {
		return id;
	}
	public void setId(String id) {
		this.id = id;
	}
	public String getDenominazione() {
		return denominazione;
	}
	public void setDenominazione(String denominazione) {
		this.denominazione = denominazione;
	}
	public String getImporto() {
		return importo;
	}
	public void setImporto(String importo) {
		this.importo = importo;
	}
	public String getIdContribuente() {
		return idContribuente;
	}
	public void setIdContribuente(String idContribuente) {
		this.idContribuente = idContribuente;
	}
	
	public List<String> validate(){
		List <String> listaErrori = new ArrayList<String>();
		int importoInput = 0;
		Long idInput = 0L;
		try {

			idInput = Long.parseLong((String) this.id);
			importoInput = Integer.parseInt((String) this.importo);
		} catch (NumberFormatException e) {
			importoInput = -1;
		}
		if (StringUtils.isEmpty( this.getDenominazione())) {
			listaErrori.add("Denominazione non valida");
		}
		if (importoInput<=0) {
			listaErrori.add("Importo non valido");
		}
		if(idInput<=0) {
			listaErrori.add("id contribuente non valido");
		}
		return listaErrori;
		}

	public 
}
